<div class="footer">Static site • No login • No database • Very safe</div>

  </div>  <script>
    /*
      This script only toggles visibility.
      No user input, no eval, no server calls.
      Very hard to hack.
    */

    const questions = document.querySelectorAll('.question');

    questions.forEach(q => {
      q.addEventListener('click', () => {
        const answer = q.nextElementSibling;
        answer.style.display =
          answer.style.display === 'block' ? 'none' : 'block';
      });
    });
  </script></body>
